
public class oc14_234 {

	private class ListNode{
		int val;
		ListNode next;
		public ListNode(int val){
			this.val = val;
		}
	}
	
	public static void main(String[] args){
		// test goes here
	}
	
    public boolean isPalindrome(ListNode head) {
        if(head==null)
        	return false;
        if(head.next==null)
        	return true;
        
        // find the mid point of the list
        ListNode fast = head;
        ListNode slow = head;
        
        while(fast.next.next!=null){
        	fast = fast.next.next;
        	slow = slow.next;
        }
        if(fast.next != null)
        	slow = slow.next;
    }
}
